@model DemoMVC.Models.Product
@{
    ViewData["Title"] = "Add a New Product";
}
<h1>Add a new Product</h1>
<hr />
<h4>
    @ViewData["Message"]<br />
</h4>
<div class="flex-container">
    <div class="col-md-4 col-sm-6">
        <form asp-controller="Product" asp-action="Create" method="POST">
            <div class="form-group">
                <label> Product ID : </label>
                <input asp-for="ProductId" placeholder="ProductId" />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label> SKU : </label>
                <input asp-for="SKU" placeholder="SKU" />
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label>Product Name : </label>
                <input asp-for="ProductName" placeholder="ProductName" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <br />
             <div class="form-group">
                <label> Features :  </label>
                <input asp-for="Features" placeholder="Features" />
                <span asp-validation-for="Features" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label> Price :  </label>
                <input asp-for="Price" placeholder="Price" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label> Stock :  </label>
                <input asp-for="Stock" type="text" placeholder="Stock" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label> Warranty :  </label>
                <input asp-for="Warranty" type="text" placeholder="Warranty" />
                <span asp-validation-for="Warranty" class="text-danger"></span>
            </div>
            <br />
             <div class="form-group">
                <label> Rating : </label>
                <input asp-for="Rating" type="text"  placeholder="Rating" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group"><br/>
                <label> Vendor Id : </label>
                <input asp-for="VendorId" type="text" placeholder="VendorId" />
                <span asp-validation-for="VendorId" class="text-danger"></span>
            </div>
            <br />
    <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-info" />
    </div>
</form>
</div>
</div>